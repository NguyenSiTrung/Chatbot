<com.trantienptit.sev_user.chatbot23.bubble.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bubbleLayout"
    android:clipChildren="true"
    android:clipToPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ic_help"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@drawable/profile_decorator"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_center_focus" />
       <include layout="@layout/mesenger_layout"/>
    </LinearLayout>
</com.trantienptit.sev_user.chatbot23.bubble.BubbleLayout>